<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:JoyConfig.Application.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="JoyConfig.Views.TemplateManagerView"
             x:DataType="vm:TemplateManagerViewModel">
    <Design.DataContext>
        <vm:TemplateManagerViewModel/>
    </Design.DataContext>
    <Grid RowDefinitions="Auto,*" Margin="15">
        <TextBlock Text="Available Templates" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
        <ListBox Grid.Row="1" ItemsSource="{Binding Templates}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*,Auto" Width="400">
                        <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                        <Button Grid.Column="1"
                                Content="Delete"
                                Command="{Binding $parent[UserControl].DataContext.DeleteTemplateCommand}"
                                CommandParameter="{Binding}"
                                Classes="Danger"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
