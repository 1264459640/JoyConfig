<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:JoyConfig.ViewModels"
             xmlns:views="using:JoyConfig.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="JoyConfig.Views.AttributeSetView"
             x:DataType="vm:AttributeSetViewModel">
    <DockPanel Margin="10" LastChildFill="True">
        <!-- Toolbar -->
        <Border DockPanel.Dock="Top" Padding="0,0,0,10" Margin="0,0,0,10" BorderBrush="Gray" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button Content="{Binding LocalizationManager[Common_Save]}" Command="{Binding SaveCommand}" Classes="Filled"/>
                <Button Content="另存为模板" Command="{Binding SaveAsTemplateCommand}" Classes="Outline"/>
                <Button Content="{Binding LocalizationManager[AttributeSet_AddAttribute]}" Command="{Binding AddAttributeValueCommand}" Classes="Outline"/>
                <Button Content="{Binding LocalizationManager[AttributeSet_RemoveAttribute]}" Command="{Binding RemoveAttributeValueCommand}" Classes="Outline"/>
            </StackPanel>
        </Border>

        <!-- AttributeSet Details Form -->
        <StackPanel DockPanel.Dock="Top" Spacing="10">
            <TextBlock Text="{Binding LocalizationManager[AttributeSet_Details]}" FontSize="18" FontWeight="Bold"/>
            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="10" ColumnSpacing="10">
                <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding LocalizationManager[AttributeSet_ID]}" VerticalAlignment="Center"/>
                <DockPanel Grid.Row="0" Grid.Column="1">
                    <Button DockPanel.Dock="Right" Content="修改" Command="{Binding ChangeIdCommand}" Classes="Outline" Margin="5,0,0,0"/>
                    <TextBox Text="{Binding AttributeSet.Id}" IsReadOnly="True" Watermark="Unique Identifier"/>
                </DockPanel>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding LocalizationManager[AttributeSet_Name]}" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding AttributeSet.Name, Mode=TwoWay}" Watermark="Display Name"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="{Binding LocalizationManager[AttributeSet_Description]}" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding AttributeSet.Description, Mode=TwoWay}" TextWrapping="Wrap" AcceptsReturn="True" Height="60" Watermark="Optional description"/>
            </Grid>
        </StackPanel>

        <!-- Header for Values -->
        <TextBlock DockPanel.Dock="Top" Text="{Binding LocalizationManager[AttributeSet_AttributeValues]}" FontSize="16" FontWeight="SemiBold" Margin="0,15,0,5"/>

        <!-- AttributeValues Card View -->
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding AttributeValues}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" Spacing="5"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <views:AttributeValueCardView/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>
