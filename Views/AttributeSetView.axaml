<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:JoyConfig.ViewModels"
             xmlns:material="using:Material.Styles.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="JoyConfig.Views.AttributeSetView"
             x:DataType="vm:AttributeSetViewModel">
    <UserControl.Resources>
        <vm:EnumToItemsSourceConverter x:Key="EnumToItemsSourceConverter"/>
    </UserControl.Resources>
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="20" Margin="10">
            <TextBlock Text="{Binding AttributeSet.Name, StringFormat='Attribute Set: {0}'}"
                       FontSize="18"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding Source={x:Type vm:DisplayMode}, Converter={StaticResource EnumToItemsSourceConverter}}"
                      SelectedItem="{Binding CurrentDisplayMode}"
                      VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Card View -->
        <ScrollViewer IsVisible="{Binding IsCardViewVisible}">
            <ItemsControl ItemsSource="{Binding AttributeValues}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Margin="5"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <material:Card Margin="5" Padding="10" Width="300">
                            <StackPanel Spacing="5">
                                <TextBlock Text="{Binding AttributeType}" FontSize="16" FontWeight="Bold"/>
                                <TextBlock Text="{Binding AttributeCategory}" Foreground="Gray"/>
                                <Grid ColumnDefinitions="Auto,*" RowDefinitions="*,*,*,*" Margin="0,10,0,0">
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Base Value:" Margin="0,0,10,0"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding BaseValue}"/>
                                    
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Min Value:" Margin="0,0,10,0"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding MinValue}"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Max Value:" Margin="0,0,10,0"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding MaxValue}"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Comment:" Margin="0,0,10,0" VerticalAlignment="Top"/>
                                    <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding AttributeTypeComment}" TextWrapping="Wrap" AcceptsReturn="True" Height="60"/>
                                </Grid>
                            </StackPanel>
                        </material:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- List View -->
        <Grid RowDefinitions="Auto,*" IsVisible="{Binding IsListViewVisible}">
            <!-- Header -->
            <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="0,0,0,1" Padding="5" Margin="5,0">
                <Grid ColumnDefinitions="*,*,*,*,*,2*">
                    <TextBlock Grid.Column="0" Text="Attribute" FontWeight="Bold"/>
                    <TextBlock Grid.Column="1" Text="Category" FontWeight="Bold"/>
                    <TextBlock Grid.Column="2" Text="Base Value" FontWeight="Bold"/>
                    <TextBlock Grid.Column="3" Text="Min Value" FontWeight="Bold"/>
                    <TextBlock Grid.Column="4" Text="Max Value" FontWeight="Bold"/>
                    <TextBlock Grid.Column="5" Text="Comment" FontWeight="Bold"/>
                </Grid>
            </Border>

            <!-- Data Rows -->
            <ScrollViewer Grid.Row="1">
                <ItemsControl ItemsSource="{Binding AttributeValues}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="5" Margin="5,0">
                                <Grid ColumnDefinitions="*,*,*,*,*,2*">
                                    <TextBlock Grid.Column="0" Text="{Binding AttributeType}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding AttributeCategory}" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="2" Text="{Binding BaseValue}" Margin="5,0"/>
                                    <TextBox Grid.Column="3" Text="{Binding MinValue}" Margin="5,0"/>
                                    <TextBox Grid.Column="4" Text="{Binding MaxValue}" Margin="5,0"/>
                                    <TextBox Grid.Column="5" Text="{Binding AttributeTypeComment}" Margin="5,0"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</UserControl>
