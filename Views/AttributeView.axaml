<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:JoyConfig.Application.ViewModels"
             xmlns:material="using:Material.Styles.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="JoyConfig.Views.AttributeView"
             x:DataType="vm:AttributeViewModel">
    <DockPanel>
        <material:Card DockPanel.Dock="Top" Margin="10,10,10,0">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button Content="{Binding LocalizationManager[Common_Save]}" Command="{Binding SaveCommand}" Classes="Filled"/>
                <Button Content="{Binding LocalizationManager[Common_Delete]}" Command="{Binding DeleteCommand}" Classes="Outlined" Foreground="Red" BorderBrush="Red"/>
            </StackPanel>
        </material:Card>

        <TextBlock Text="{Binding ErrorMessage}"
                   Foreground="Red"
                   IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                   DockPanel.Dock="Top"
                   Margin="10,5,10,0"/>

        <Grid Margin="10" ColumnDefinitions="*, 300" ColumnSpacing="10">
            <!-- Editor Fields -->
            <ScrollViewer Grid.Column="0">
                <StackPanel Spacing="10">
                    <TextBlock Text="{Binding Title}"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <material:Card Padding="15">
                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="10" ColumnSpacing="10">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding LocalizationManager[Attribute_ID]}" VerticalAlignment="Center"/>
                            <Grid Grid.Row="0" Grid.Column="1" ColumnDefinitions="Auto,*">
                                <TextBlock Grid.Column="0" Text="{Binding CategoryPrefix}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Grid.Column="1" Text="{Binding IdSuffix, Mode=TwoWay}"/>
                            </Grid>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding LocalizationManager[Attribute_Category]}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Attribute.Category}" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="{Binding LocalizationManager[Attribute_Description]}" VerticalAlignment="Top"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Attribute.Description}" 
                                     TextWrapping="Wrap" 
                                     AcceptsReturn="True" 
                                     MinHeight="120"/>
                        </Grid>
                    </material:Card>
                </StackPanel>
            </ScrollViewer>

            <!-- Referencing AttributeSets -->
            <material:Card Grid.Column="1" Padding="10">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="{Binding LocalizationManager[Attribute_ReferencedBy]}" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ListBox ItemsSource="{Binding ReferencingAttributeSets}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Id}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Name}" Foreground="Gray"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </material:Card>
        </Grid>
    </DockPanel>
</UserControl>
