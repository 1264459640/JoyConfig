<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:material="using:Material.Styles.Controls"
             xmlns:vm="using:JoyConfig.ViewModels"
             xmlns:components="using:JoyConfig.Views.Components"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="JoyConfig.Views.Editors.AttributeSetView"
             x:DataType="vm:AttributeSetViewModel">
    
    <DockPanel>
        <!-- 工具栏 -->
        <components:EditorToolbar DockPanel.Dock="Top"
                                  SaveButtonText="{Binding LocalizationManager[Common_Save]}"
                                  SaveCommand="{Binding SaveCommand}">
            <components:EditorToolbar.SecondaryActions>
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <Button Content="另存为模板" 
                            Command="{Binding SaveAsTemplateCommand}" 
                            Classes="Outline"/>
                    <Button Content="{Binding LocalizationManager[AttributeSet_AddAttribute]}" 
                            Command="{Binding AddAttributeValueCommand}" 
                            Classes="Outline"/>
                    <Button Content="{Binding LocalizationManager[AttributeSet_RemoveAttribute]}" 
                            Command="{Binding RemoveAttributeValueCommand}" 
                            Classes="Outline"/>
                </StackPanel>
            </components:EditorToolbar.SecondaryActions>
        </components:EditorToolbar>

        <!-- 错误信息 -->
        <TextBlock Text="{Binding ErrorMessage}"
                   Foreground="Red"
                   IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                   DockPanel.Dock="Top"
                   Margin="12,8"
                   TextWrapping="Wrap"/>

        <!-- 基本信息 - 固定区域 -->
        <components:BasicInfoCard DockPanel.Dock="Top"
                                  Title="{Binding LocalizationManager[AttributeSet_Details]}">
            <components:BasicInfoCard.FormContent>
                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="12" ColumnSpacing="12">
                    <!-- ID -->
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                               Text="{Binding LocalizationManager[AttributeSet_ID]}" 
                               VerticalAlignment="Center"/>
                    <DockPanel Grid.Row="0" Grid.Column="1">
                        <Button DockPanel.Dock="Right" 
                                Content="修改" 
                                Command="{Binding ChangeIdCommand}" 
                                Classes="Outline" 
                                Margin="8,0,0,0"/>
                        <TextBox Text="{Binding AttributeSet.Id}" 
                                 IsReadOnly="True" 
                                 Watermark="Unique Identifier"/>
                    </DockPanel>

                    <!-- 名称 -->
                    <TextBlock Grid.Row="1" Grid.Column="0" 
                               Text="{Binding LocalizationManager[AttributeSet_Name]}" 
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" 
                             Text="{Binding AttributeSet.Name, Mode=TwoWay}" 
                             Watermark="Display Name"/>

                    <!-- 描述 -->
                    <TextBlock Grid.Row="2" Grid.Column="0" 
                               Text="{Binding LocalizationManager[AttributeSet_Description]}" 
                               VerticalAlignment="Top" 
                               Margin="0,8,0,0"/>
                    <TextBox Grid.Row="2" Grid.Column="1" 
                             Text="{Binding AttributeSet.Description, Mode=TwoWay}" 
                             AcceptsReturn="True" 
                             TextWrapping="Wrap" 
                             MinHeight="60" 
                             Watermark="Optional description"/>
                </Grid>
            </components:BasicInfoCard.FormContent>
        </components:BasicInfoCard>

        <!-- 属性列表 - 可滚动区域 -->
        <components:AttributeListCard Title="{Binding LocalizationManager[AttributeSet_AttributeValues]}"
                                      CountText="{Binding AttributeValues.Count, StringFormat='共 {0} 个属性'}"
                                      IsEmpty="{Binding !AttributeValues.Count}"
                                      EmptyMessage="点击上方'添加属性'按钮开始添加">
            <components:AttributeListCard.ListContent>
                <ItemsControl ItemsSource="{Binding AttributeValues}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#2a2a2a" 
                                    CornerRadius="4" 
                                    Padding="8,6" 
                                    Margin="0,1">
                                <Grid ColumnDefinitions="2*,*,*,*,*,Auto" ColumnSpacing="12">
                                    
                                    <!-- 属性ID -->
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding AttributeValue.AttributeId}" 
                                               VerticalAlignment="Center" 
                                               FontFamily="Consolas"/>
                                    
                                    <!-- 分类 -->
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding AttributeValue.AttributeCategory}" 
                                               VerticalAlignment="Center"/>
                                    
                                    <!-- 基础值 -->
                                    <NumericUpDown Grid.Column="2" 
                                                   Value="{Binding AttributeValue.BaseValue}" 
                                                   Increment="1" 
                                                   FormatString="F1"/>
                                    
                                    <!-- 最小值 -->
                                    <NumericUpDown Grid.Column="3" 
                                                   Value="{Binding AttributeValue.MinValue}" 
                                                   Increment="1" 
                                                   FormatString="F1"/>
                                    
                                    <!-- 最大值 -->
                                    <NumericUpDown Grid.Column="4" 
                                                   Value="{Binding AttributeValue.MaxValue}" 
                                                   Increment="1" 
                                                   FormatString="F1"/>
                                    
                                    <!-- 删除按钮 -->
                                    <Button Grid.Column="5" 
                                            Content="删除" 
                                            Command="{Binding $parent[UserControl].((vm:AttributeSetViewModel)DataContext).RemoveAttributeValueCommand}" 
                                            CommandParameter="{Binding}" 
                                            Classes="Outline" 
                                            Foreground="Red" 
                                            FontSize="11" 
                                            Padding="8,4"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </components:AttributeListCard.ListContent>
        </components:AttributeListCard>
    </DockPanel>
</UserControl>
