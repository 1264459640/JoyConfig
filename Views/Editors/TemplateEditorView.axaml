<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:material="using:Material.Styles.Controls"
             xmlns:vm="using:JoyConfig.ViewModels.Templates"
             xmlns:components="using:JoyConfig.Views.Components"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="JoyConfig.Views.Editors.TemplateEditorView"
             x:DataType="vm:TemplateEditorViewModel">
    
    <DockPanel>
        <!-- 工具栏 -->
        <components:EditorToolbar DockPanel.Dock="Top"
                                  SaveButtonText="保存"
                                  SaveCommand="{Binding SaveCommand}"
                                  IsSaveEnabled="{Binding IsModified}"
                                  IsModified="{Binding IsModified}">
            <components:EditorToolbar.SecondaryActions>
                <Button Content="添加属性" 
                        Command="{Binding AddAttributeCommand}" 
                        Classes="Outline"/>
            </components:EditorToolbar.SecondaryActions>
        </components:EditorToolbar>

        <!-- 错误信息 -->
        <TextBlock Text="{Binding ErrorMessage}"
                   Foreground="Red"
                   IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                   DockPanel.Dock="Top"
                   Margin="12,8"
                   TextWrapping="Wrap"/>

        <!-- 基本信息 - 固定区域 -->
        <components:BasicInfoCard DockPanel.Dock="Top"
                                  Title="基本信息">
            <components:BasicInfoCard.FormContent>
                <Grid ColumnDefinitions="Auto,*" 
                      RowDefinitions="Auto,Auto,Auto" 
                      ColumnSpacing="12" 
                      RowSpacing="12">
                    
                    <!-- 模板名称 -->
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                               Text="名称:" 
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" 
                             Text="{Binding TemplateName}" 
                             Watermark="输入模板名称"/>
                    
                    <!-- 版本 -->
                    <TextBlock Grid.Row="1" Grid.Column="0" 
                               Text="版本:" 
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" 
                             Text="{Binding TemplateVersion}" 
                             Watermark="1.0.0"/>
                    
                    <!-- 描述 -->
                    <TextBlock Grid.Row="2" Grid.Column="0" 
                               Text="描述:" 
                               VerticalAlignment="Top" 
                               Margin="0,8,0,0"/>
                    <TextBox Grid.Row="2" Grid.Column="1" 
                             Text="{Binding TemplateDescription}" 
                             AcceptsReturn="True" 
                             TextWrapping="Wrap" 
                             MinHeight="60" 
                             Watermark="输入模板描述"/>
                </Grid>
            </components:BasicInfoCard.FormContent>
        </components:BasicInfoCard>

        <!-- 属性列表 - 可滚动区域 -->
        <components:AttributeListCard Title="属性列表"
                                      CountText="{Binding Attributes.Count, StringFormat='共 {0} 个属性'}"
                                      IsEmpty="{Binding !Attributes.Count}"
                                      EmptyMessage="点击上方'添加属性'按钮开始添加">
            <components:AttributeListCard.ListContent>
                <ItemsControl ItemsSource="{Binding Attributes}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#2a2a2a" 
                                    CornerRadius="4" 
                                    Padding="8,6" 
                                    Margin="0,1">
                                <Grid ColumnDefinitions="2*,*,*,*,*,Auto" ColumnSpacing="12">
                                    
                                    <!-- 属性ID -->
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding AttributeId}" 
                                               VerticalAlignment="Center" 
                                               FontFamily="Consolas"/>
                                    
                                    <!-- 分类 -->
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding AttributeCategory}" 
                                               VerticalAlignment="Center"/>
                                    
                                    <!-- 基础值 -->
                                    <NumericUpDown Grid.Column="2" 
                                                   Value="{Binding BaseValue}" 
                                                   Increment="1" 
                                                   FormatString="F1"/>
                                    
                                    <!-- 最小值 -->
                                    <NumericUpDown Grid.Column="3" 
                                                   Value="{Binding MinValue}" 
                                                   Increment="1" 
                                                   FormatString="F1"/>
                                    
                                    <!-- 最大值 -->
                                    <NumericUpDown Grid.Column="4" 
                                                   Value="{Binding MaxValue}" 
                                                   Increment="1" 
                                                   FormatString="F1"/>
                                    
                                    <!-- 删除按钮 -->
                                    <Button Grid.Column="5" 
                                            Content="删除" 
                                            Command="{Binding $parent[UserControl].((vm:TemplateEditorViewModel)DataContext).RemoveAttributeCommand}" 
                                            CommandParameter="{Binding}" 
                                            Classes="Outline" 
                                            Foreground="Red" 
                                            FontSize="11" 
                                            Padding="8,4"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </components:AttributeListCard.ListContent>
        </components:AttributeListCard>
    </DockPanel>
</UserControl>