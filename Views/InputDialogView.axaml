<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:JoyConfig.ViewModels"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="150"
             x:Class="JoyConfig.Views.InputDialogView"
             x:DataType="vm:InputDialogViewModel">
    <Border Padding="20" MinWidth="300">
        <DockPanel>
            <TextBlock DockPanel.Dock="Top" Text="{Binding Title}" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
            
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,20,0,0">
                <Button Content="OK" Command="{Binding OkCommand}" Classes="Filled"/>
                <Button Content="Cancel" Command="{Binding CancelCommand}" Classes="Outlined"/>
            </StackPanel>

            <StackPanel Spacing="10">
                <TextBlock Text="{Binding Message}" TextWrapping="Wrap"/>
                <TextBox Text="{Binding InputText, Mode=TwoWay}"/>
            </StackPanel>
        </DockPanel>
    </Border>
</UserControl>
